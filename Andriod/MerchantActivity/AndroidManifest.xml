<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.merchantLocalization"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk 
        android:minSdkVersion="7" 
        android:targetSdkVersion="17"/>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name="app.merchantLocalization.MerchantLocalizationActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="app.merchantLocalization.HomeActivity" >
        </activity>
        <activity android:name="app.merchantLocalization.AccountSettingsActivity" >
        </activity>
        <activity android:name="app.merchantLocalization.Customers" >
        </activity>
        <activity android:name="app.merchantLocalization.ManageDeals" >
        </activity>
        <activity android:name="app.merchantLocalization.ChargeCustomer" >
        </activity>
        <activity android:name="app.merchantLocalization.LocationActivity" >
        </activity>
        <activity android:name="app.merchantLocalization.PendingTransactions" >
        </activity>
        <activity
            android:name="app.merchantLocalization.Transactions"
            android:label="@string/title_activity_transactions" >
        </activity>
    </application>

</manifest>